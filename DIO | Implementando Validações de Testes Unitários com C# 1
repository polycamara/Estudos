using System;
using TestesUnitarios.Desafio.Console.Services;
using Xunit;

namespace TestesUnitarios.Desafio.Tests
{
    public class ValidacoesStringTests
    {
        [Fact]
        public void DeveRetornar6QuantidadeCaracteresDaPalavraMatrix()
        {
            // Arrange
            var validacoesString = new ValidacoesString();
            var texto = "Matrix";

            // Act
            var resultado = validacoesString.RetornarQuantidadeCaracteres(texto);

            // Assert
            Assert.Equal(6, resultado);
        }

        [Fact]
        public void DeveContemAPalavraQualquerNoTexto()
        {
            // Arrange
            var validacoesString = new ValidacoesString();
            var texto = "Esse é um texto qualquer";
            var palavraProcurada = "qualquer";

            // Act
            var resultado = validacoesString.ContemCaractere(texto, palavraProcurada);

            // Assert
            Assert.True(resultado);
        }

        [Fact]
        public void NaoDeveConterAPalavraTesteNoTexto()
        {
            // Arrange
            var validacoesString = new ValidacoesString();
            var texto = "Esse é um texto qualquer";
            var palavraProcurada = "teste";

            // Act
            var resultado = validacoesString.ContemCaractere(texto, palavraProcurada);

            // Assert
            Assert.False(resultado);
        }

        [Fact]
        public void TextoDeveTerminarComAPalavraProcurado()
        {
            // Arrange
            var validacoesString = new ValidacoesString();
            var texto = "Começo, meio e fim do texto procurado";
            var palavraProcurada = "procurado";

            // Act
            var resultado = validacoesString.TextoTerminaCom(texto, palavraProcurada);

            // Assert
            Assert.True(resultado);
        }
    }
}
